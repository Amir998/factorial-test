<%= tag.div id: dom_id(contact), class: "flex border-b-2 py-6 mx-2" do %>
  <div id="contact_info" class="w-3/4 text-center grid grid-flow-col grid-cols-4 grid-rows-1">
    <span class="font-semibold text-gray-400 text-center"><%= contact.first_name %></span>
    <span class="font-semibold text-gray-400"><%= contact.last_name %></span>
    <span class="font-semibold text-gray-400"><%= contact.email %></span>
    <span class="font-semibold text-gray-400"><%= contact.phone_number %></span>
  </div>
  <div id="actionButtons" class="w-1/4 text-right">
    <%= link_to "Update", contacts_path(contact), class: "hidden py-2 px-3 text-white font-semibold bg-blue-600 hover:bg-blue-400 rounded-full cursor-pointer" %>
    <%= link_to "Cancel", contacts_path(contact), class: "hidden py-2 px-3 text-red-600 underline font-semibold cursor-pointer" %>
    <%= link_to "Edit", contact_path(contact), class: "py-2 px-3 text-gray-600 underline font-semibold cursor-pointer" %>
    <%= link_to "Toggle History", contacts_path(contact), class: "py-2 px-3 text-gray-600 underline font-semibold cursor-pointer" %>
    <%= link_to "Delete", contact_path(contact), method: :delete, class: "py-2 px-3 text-white font-semibold bg-red-600 hover:bg-red-400 rounded-full cursor-pointer" %>
  </div>
<% end %>
