<%= form_with model: contact, id: "contact_form" do |f| %>
  <div class="w-3/4 mx-auto py-8 grid grid-flow-col grid-cols-4 grid-rows-1 gap-4">
    <div>
      <%= f.label :first_name, class: "px-1 text-sm text-gray-600 font-bold" %>
      <%= f.text_field :first_name, class: "p-2 h-10 rounded border" %>
    </div>
    <div>
      <%= f.label :last_name, class: "px-1 text-sm text-gray-600 font-bold" %>
      <%= f.text_field :last_name, class: "p-2 h-10 rounded border" %>
    </div>
    <div>
      <%= f.label :email, class: "px-1 text-sm text-gray-600 font-bold" %>
      <%= f.email_field :email, class: "block p-2 h-10 rounded border" %>
    </div>
    <div>
      <%= f.label :phone_number, class: "px-1 text-sm text-gray-600 font-bold" %>
      <%= f.text_field :phone_number, class: "p-2 h-10 rounded border" %>
    </div>
    <div class="mt-6">
      <%= f.submit "Submit", class: "py-2 px-3 text-white font-semibold bg-blue-600 hover:bg-blue-400 rounded-full cursor-pointer", data: { disable_with: false } %>
    </div>
  </div>
<% end %>
