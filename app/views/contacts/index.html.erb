<div class="mb-8 border-b-2">
  <h1 class="text-2xl font-semibold text-blue-300 text-center my-2">Welcome to your contact list handler!</h1>
</div>

<div>
  <%= render "contacts/form", contact: Contact.new %>
</div>

<div class="w-5/6 mx-auto my-12">
  <div class="w-3/4 text-center grid grid-flow-col grid-cols-4 grid-rows-1">
    <span class="font-bold text-gray-600">First name</span>
    <span class="font-bold text-gray-600">Last name</span>
    <span class="font-bold text-gray-600">Email</span>
    <span class="font-bold text-gray-600">Phone number</span>
  </div>

  <div id="contacts">
    <%= render @contacts %>
  </div>
</div>
